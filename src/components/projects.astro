---


interface Project {
  title: string;
  description: string;
  link: string;
  skills?: string[];
}

const projects: Project[] = [
  {
    title: "Hospital-Management-System",
    description: "The Hospital Management System is a comprehensive web-based application designed to streamline hospital operations. ",
    link: "https://github.com/SherifAhmedd/Hospital-Management-System",
    skills: ["Python", "JavaScript", "HTML", "CSCS","MySql"],
  },
  {
    title: "Economic-Growth-Prediction",
    description: "This project investigates the relationship between changes in nighttime light intensity and internet speeds, exploring their combined impact on economic development. ",
    link: "https://github.com/SherifAhmedd/Economic-Growth-Prediction",
    skills: ["Python", "Jupyter Notebook", "Pandas", "TensorFlow", "Keras"],
  },
  {
    title: "University-Coordination-System",
    description: "The University Coordination System is developed using ASP.NET Core MVC to centralize and automate various administrative tasks related to student enrollment and academic program management across different schools within a university.",
    link: "https://github.com/SherifAhmedd/University-Coordination-System",
    skills: ["C#", "ASP.NET Core", "MY SQL" ,"JavaScript" ,"Html" ,"CSS" ],
  },
  {
    title: "smart-photo-editor",
    description: "A backend photo editor built with Flask. Supports operations like FFT, filtering, histogram equalization, masking, noise addition, and image uploads.",
    link: "https://github.com/SherifAhmedd/smart-photo-editor-backend",
    skills: ["Python", "Flask", "OpenCV"],
  },
];
---

<section
  id="projects"
  class="pt-4 pb-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-6xl mx-auto px-6 md:px-12">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec reveal reveal-up">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8 reveal reveal-up delay-100">Projects</h3>

    <div class="relative grid grid-cols-1 md:grid-cols-11 gap-8 md:gap-0 timeline-container">
      {projects.map((project, index) => (
        <>
          {/* Left card (even) */}
          <div class={`md:col-span-5 flex ${index % 2 === 0 ? '' : 'hidden md:invisible md:flex'}`}
               style="max-width: 100%;">
            {(index % 2 === 0 || true) && (
              <div class="w-full bg-[var(--background)] border border-[var(--white-icon-tr)] border-glow rounded-2xl p-6 shadow-lg flex flex-col gap-4 cursor-pointer opacity-0 translate-y-8 will-change-transform md:ml-auto" data-animate style={`transition-delay: ${index * 120}ms;`}>
                <div class="flex items-center gap-3 mb-2">
                  <h4 class="text-xl md:text-2xl font-semibold text-[var(--sec)] group-hover:underline">{project.title}</h4>
                </div>
                <p class="text-[var(--white-icon)] text-sm md:text-base mb-4">{project.description}</p>
                <div class="flex flex-wrap gap-2 md:gap-3 mb-4">
                  {project.skills && project.skills.map(skill => (
                    <span class="px-2 py-0.5 md:px-3 md:py-1 border border-[#a476ff] text-[#a476ff] rounded-full text-xs md:text-sm font-medium bg-transparent">
                      {skill}
                    </span>
